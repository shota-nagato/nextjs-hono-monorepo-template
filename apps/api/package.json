  "dependencies": {
    "@libsql/client": "^0.15.15",
    "better-auth": "^1.3.34",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.4"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.6",
    "wrangler": "^4.4.0"
  }
}
